{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "E2E Provider Test Secrets",
  "description": "Configuration for provider E2E tests with real API credentials",
  "type": "object",
  "properties": {
    "providers": {
      "type": "object",
      "description": "Provider-specific secrets keyed by config key",
      "properties": {
        "openai": {
          "type": "object",
          "properties": { "apiKey": { "type": "string" } },
          "required": ["apiKey"]
        },
        "anthropic": {
          "type": "object",
          "properties": { "apiKey": { "type": "string" } },
          "required": ["apiKey"]
        },
        "google": {
          "type": "object",
          "properties": { "apiKey": { "type": "string" } },
          "required": ["apiKey"]
        },
        "xai": {
          "type": "object",
          "properties": { "apiKey": { "type": "string" } },
          "required": ["apiKey"]
        },
        "deepseek": {
          "type": "object",
          "properties": { "apiKey": { "type": "string" } },
          "required": ["apiKey"]
        },
        "moonshot": {
          "type": "object",
          "properties": { "apiKey": { "type": "string" } },
          "required": ["apiKey"]
        },
        "minimax": {
          "type": "object",
          "properties": { "apiKey": { "type": "string" } },
          "required": ["apiKey"]
        },
        "openrouter": {
          "type": "object",
          "properties": { "apiKey": { "type": "string" } },
          "required": ["apiKey"]
        },
        "bedrock-api-key": {
          "type": "object",
          "properties": {
            "apiKey": { "type": "string" },
            "region": { "type": "string" }
          },
          "required": ["apiKey"]
        },
        "bedrock-access-key": {
          "type": "object",
          "properties": {
            "accessKeyId": { "type": "string" },
            "secretAccessKey": { "type": "string" },
            "sessionToken": { "type": "string" },
            "region": { "type": "string" }
          },
          "required": ["accessKeyId", "secretAccessKey"]
        },
        "bedrock-profile": {
          "type": "object",
          "properties": {
            "profileName": { "type": "string" },
            "region": { "type": "string" }
          },
          "required": ["profileName"]
        },
        "azure-api-key": {
          "type": "object",
          "properties": {
            "apiKey": { "type": "string" },
            "endpoint": { "type": "string" },
            "deploymentName": { "type": "string" }
          },
          "required": ["apiKey", "endpoint", "deploymentName"]
        },
        "azure-entra-id": {
          "type": "object",
          "properties": {
            "endpoint": { "type": "string" },
            "deploymentName": { "type": "string" }
          },
          "required": ["endpoint", "deploymentName"]
        },
        "ollama": {
          "type": "object",
          "properties": {
            "serverUrl": { "type": "string" },
            "modelId": { "type": "string" }
          }
        },
        "lmstudio": {
          "type": "object",
          "properties": {
            "serverUrl": { "type": "string" }
          },
          "required": ["serverUrl"]
        },
        "litellm": {
          "type": "object",
          "properties": {
            "serverUrl": { "type": "string" },
            "apiKey": { "type": "string" }
          },
          "required": ["serverUrl"]
        },
        "zai": {
          "type": "object",
          "properties": {
            "apiKey": { "type": "string" },
            "region": { "type": "string", "enum": ["china", "international"] }
          },
          "required": ["apiKey"]
        },
        "custom": {
          "type": "object",
          "properties": {
            "serverUrl": { "type": "string" },
            "apiKey": { "type": "string" }
          },
          "required": ["serverUrl"]
        }
      },
      "additionalProperties": true
    },
    "taskPrompt": {
      "type": "string",
      "description": "Custom task prompt for real tests (default: simple calculation)"
    }
  },
  "required": ["providers"]
}
